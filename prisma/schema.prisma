generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum Gender {
    male
    female
    both
}

type Location {
    address               String
    city                  String
    province              String
    district              String
    divisionalSecretariat String
    google                String
    latitude              Float?
    longitude             Float?
}

type Contact {
    phone     String[]
    email     String[]
    website   String
    facebook  String
    instagram String
}

type Occupancy {
    total  Int?
    male   Int?
    female Int?
}

type AgeRanges {
    all    String?
    male   String?
    female String?
}

model ChildCareFacility {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    name      String    @unique
    type      String
    managedBy String
    location  Location
    contact   Contact
    occupancy Occupancy
    ageRanges AgeRanges
    genders   Gender
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    photos    String[]

    @@map("facilities")
}
